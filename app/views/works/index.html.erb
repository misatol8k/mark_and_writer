<h1>Works#index</h1>

<%= search_form_for @q do |form| %>
<!-- 未実施：フォームのグループ化、タグ追加 -->
  <div class="field">
    <%= form.label :title_cont, 'タイトル' %>
    <%= form.search_field :title_cont %>
  </div>

  <div class="actions form-group">
    <%= form.submit 'Search', class: "btn btn-default" %>
  </div>

  <div class="form-group">
    <%= link_to 'Clear', works_path, class: "btn btn-default" %>
  </div>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Title</th>
      <th>User.name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= strip_tags(work.content).truncate(29,omission: "...") %></td>
        <td><%= strip_tags(work.title).truncate(19,omission: "...") %></td>
        <td><%= link_to 'Show', work %></td>
      </tr>
    <% end %>
  </tbody>
</table>
