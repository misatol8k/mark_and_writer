<h2>作品一覧</h2>

<%= search_form_for @q, class: "form-inline" do |form| %>
<!-- 未実施：フォームのグループ化、タグ追加 -->
  <div class="form-group">
    <%= form.label :title_cont, 'タイトル' %>
    <%= form.search_field :title_cont, class: "form-control" %>
  </div>

  <div class="actions form-group" role="button">
    <%= form.submit 'Search', class: "btn btn-default" %>
  </div>

  <div class="form-group">
    <%= link_to 'Clear', works_path, class: "btn btn-default" %>
  </div>
<% end %>
<br>

<div class="table-responsive">
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= Work.human_attribute_name(:content) %></th>
      <th><%= Work.human_attribute_name(:title) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= strip_tags(work.content).truncate(29,omission: "...") %></td>
        <td><%= strip_tags(work.title).truncate(19,omission: "...") %></td>
        <td><%= link_to "#{work.user.name}", work.user %></td>
        <td><%= link_to 'Show', work, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
