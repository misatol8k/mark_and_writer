<p class="top_image"><%= image_tag "topimage_maw_pc.jpeg", id: 'top_image' %></p>

<h2>新着作品</h2>

<div class="table-responsive">
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= Work.human_attribute_name(:content) %></th>
      <th><%= Work.human_attribute_name(:title) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= strip_tags(work.content).truncate(29,omission: "...") %></td>
        <td><%= strip_tags(work.title).truncate(19,omission: "...") %></td>
        <td><%= link_to "#{work.user.name}", work.user %></td>
        <td><%= link_to 'Show', work, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
