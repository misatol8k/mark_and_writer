<%= form_with(model: [@work, @reaction]) do |form| %>
  <div class="form-group">
    <% Sticker.all.each do |sticker| %>
      <%= form.radio_button :sticker_id, sticker[:id] %>
      <label><%= image_tag sticker.image.url %></label>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-outline-primary btn-sm' %>
  </div>
<% end %>
