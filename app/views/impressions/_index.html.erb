<ul>
  <% impressions.each do |impression| %>
    <% if impression.id.present? %>
      <li>
        <div class="impression-comment" id ="this_impression_<%= impression.id %>"></div>
        <p><%= impression.comment %></p>
        <p><%= link_to 'コメント編集', edit_work_impression_path(work, impression), remote: true %></p>
        <p><%= link_to "コメント削除", work_impression_path(impression.work_id, impression.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>
