<h2>フォロー一覧</h2>

<div class="table-responsive">
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.name}", user %></td>
        <td><%= render 'follow_form', user: user, class: "btn btn-outline-success btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
